{
	"extends": [
		"stylelint-config-standard",
		"stylelint-prettier/recommended",
		"stylelint-config-css-modules"
	],
	"customSyntax": "@stylelint/postcss-css-in-js",
	"ignoreFiles": [
		"**/*.tsx",
		"**/*.js",
		"**/*.jsx"
	],
	"plugins": [
		"stylelint-order",
		"stylelint-prettier"
	],
	"rules": {
		"prettier/prettier": [true, {"singleQuote": true, "tabWidth": 4}],
		"declaration-empty-line-before": null,
		"property-no-unknown": [true, {"ignoreProperties": ["font-named-instance"]}],
		"indentation": null,
		"function-name-case": null,
		"order/properties-order": [
			"content",
			"position",
			"top",
			"right",
			"bottom",
			"left",
			"z-index",
			"display",
			"flex-direction",
			"flex-wrap",
			"justify-content",
			"align-items",
			"align-content",
			"align-self",
			"order",
			"float",
			"shape-outside",
			"shape-image-threshold",
			"shape-margin",
			"clear",
			"box-decoration-break",
			"overflow",
			"overflow-x",
			"overflow-y",
			"clip",
			"clip-path",
			"mask",
			"mask-type",
			"visibility",
			"box-sizing",
			"flex",
			"flex-grow",
			"flex-shrink",
			"flex-basis",
			"width",
			"min-width",
			"max-width",
			"height",
			"min-height",
			"max-height",
			"padding",
			"padding-top",
			"padding-right",
			"padding-bottom",
			"padding-left",
			"margin",
			"margin-top",
			"margin-right",
			"margin-bottom",
			"margin-left",
			"font",
			"font-family",
			"font-size",
			"font-size-adjust",
			"font-style",
			"font-stretch",
			"font-variant",
			"font-variant-alternates",
			"font-variant-caps",
			"font-variant-east-asian",
			"font-variant-ligatures",
			"font-variant-numeric",
			"font-variant-position",
			"font-weight",
			"font-kerning",
			"font-synthesis",
			"font-feature-settings",
			"font-language-override",
			"line-height",
			"letter-spacing",
			"word-spacing",
			"white-space",
			"word-break",
			"word-wrap",
			"overflow-wrap",
			"line-break",
			"hyphens",
			"tab-size",
			"text-align",
			"text-align-last",
			"text-decoration",
			"text-decoration-line",
			"text-decoration-color",
			"text-decoration-style",
			"text-underline-position",
			"text-indent",
			"text-overflow",
			"text-rendering",
			"text-shadow",
			"text-transform",
			"text-orientation",
			"text-combine-upright",
			"direction",
			"unicode-bidi",
			"vertical-align",
			"list-style",
			"list-style-type",
			"list-style-position",
			"list-style-image",
			"border-collapse",
			"border-spacing",
			"caption-side",
			"empty-cells",
			"table-layout",
			"columns",
			"column-count",
			"column-width",
			"column-gap",
			"column-rule",
			"column-rule-width",
			"column-rule-style",
