			"cursor",
			"user-select",
			"pointer-events",
			"touch-action",
			"ime-mode",
			"image-rendering",
			"image-resolution",
			"image-orientation",
			"object-fit",
			"object-position",
			"counter-reset",
			"counter-increment",
			"quotes",
			"filter",
			"mix-blend-mode",
			"color",
			"opacity",
			"background",
			"background-image",
			"background-position",
			"background-size",
			"background-repeat",
			"background-attachment",
			"background-origin",
			"background-clip",
			"background-color",
