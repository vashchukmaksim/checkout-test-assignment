{
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"declaration": false,
		"jsx": "react-jsx",
		"jsxImportSource": "@emotion/react",
		"lib": ["dom", "esnext"],
		"module": "esnext",
		"esModuleInterop": true,
		"outDir": "dist/",
		"skipLibCheck": true,
		"allowUnreachableCode": false,
		"allowSyntheticDefaultImports": true,
		"checkJs": false,
		"emitDecoratorMetadata": false,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"noEmitHelpers": true,
		"target": "esnext",
		"moduleResolution": "node",
		"noEmitOnError": false,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters":true,
		"strictNullChecks": true,
		"pretty": true,
		"removeComments": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"typeRoots": [
			"typings",
			"@types",
			"node_modules/@types",
		],
		"paths": {
			"app/utils/*": ["src/app/utils/*"],
			"app/utils": ["src/app/utils/index.ts"],
			"app/hooks/*": ["src/app/hooks/*"],
			"app/hooks": ["src/app/hooks/index.ts"],
			"app/domains/*": ["src/app/domains/*"],
			"app/domains": ["src/app/domains/index.ts"],
			"app/resources/*": ["src/resources/*"],
			"app/resources": ["src/resources/index.ts"],
			"app/ui-kit/*": ["src/ui-kit/*"],
			"app/ui-kit": ["src/ui-kit/index.ts"],
			"app/config": ["src/app/config.ts"],

			// General
			"*": [
				"node_modules/@types/*",
				"typings/*",
				"@emotion/react/types/css-prop",
				"*"
			]
		}
	},

	"include": [
		"src/**/*",
		".eslintrc.js",
		"babel.config.js",
		"jest.config.js",
		"jest.setup.js",
		"webpack.babel.js",
		"postcss.config.js",
	],

	"exclude": [
		"node_modules",
		"bundle/**/*",
	],

	"files": [
		"typings/global.d.ts",
		"typings/emotion.d.ts",
	],

	"compileOnSave": false,
	"buildOnSave": false
}
